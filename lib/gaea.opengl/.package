(package gaea.opengl
  
  (title "OpenGL")
  (description "Interface to the OpenGL 3D graphic library")
  (authors "Guillaume Cartier" "Fred LeMaster")
  (stage release)
  (root "src")
  (install gaea.opengl.install)
  (products (gaea.opengl (alias opengl)
                         (product gaea.opengl.product)
                         (update gaea.opengl
                                 gaea.opengl.glew
                                 gaea.opengl.install
                                 gaea.opengl.platform
                                 gaea.opengl.product
                                 gaea.opengl.render
                                 gaea.opengl.syntax
                                 gaea.opengl.texture
                                 gaea.opengl.trace)
                         (dependencies jazz
                                       jazz.foreign
                                       jazz.platform)))
  (project ".project"))
