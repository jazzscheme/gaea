(data jazz.ide.data.project


(import (jazz.project)
        (jazz.editor.jazz))


(form
  (<Project>                   name: gaea.sample description-file: {File :context ".package"}
    (<*>                                                tag-reference: {File :context "shader.project"} title: "Shader")
    (<Project-Directory>                                directory: {Directory :context "src"}
      (<Project-Directory>                              directory: {Directory :context "src" "gaea"}
        (<Project-Directory>                          directory: {Directory :context "src" "gaea" "sample"}
          (<Jazz-File>       name: _sample            source: {File :context "src" "gaea" "sample" "_sample.jazz"})
          (<Jazz-File>       name: syntax             source: {File :context "src" "gaea" "sample" "syntax.jazz"})
          (<Jazz-File>       name: appl               source: {File :context "src" "gaea" "sample" "appl.jazz"})
          (<Jazz-File>       name: run                source: {File :context "src" "gaea" "sample" "run.jazz"})
          (<Jazz-File>       name: window             source: {File :context "src" "gaea" "sample" "window.jazz"})))))))
