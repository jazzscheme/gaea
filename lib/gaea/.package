(package gaea
  
  (title "Gaea")
  (description "Gaea Game engine")
  (authors "Guillaume Cartier" "Alain Marcotte" "Edouard Hebert")
  (stage alpha)
  (root "src")
  (install gaea.install)
  (products (script (title "Script")
                    (update script
                            script.expand
                            script.syntax)
                    (dependencies jazz))
            (gaea (title "Gaea")
                  (test gaea.validate.run)
                  (update gaea.buffer
                          gaea.dye
                          gaea.generate
                          gaea.geometry
                          gaea.geometry.base
                          gaea.geometry.classes
                          gaea.geometry.syntax
                          gaea.homogeneous
                          gaea.install
                          gaea.literals
                          gaea.lookat
                          gaea.material
                          gaea.math
                          gaea.mesh
                          gaea.movement
                          gaea.parallelepiped
                          gaea.plane
                          gaea.program
                          gaea.programs
                          gaea.shader
                          gaea.syntax
                          gaea.types)
                   (dependencies jazz)))
  (project ".project"))
