(package gaea
  
  (title "Gaea")
  (description "Gaea Game engine")
  (authors "Guillaume Cartier" "Alain Marcotte" "Edouard Hebert")
  (stage alpha)
  (root "src")
  (install gaea.install)
  (products (script (title "Script")
                    (update script
                            script.expand
                            script.syntax)
                    (dependencies jazz))
            (gaea (title "Gaea")
                  (test gaea.validate.run)
                  (update gaea.array
                          gaea.buffer
                          gaea.camera
                          gaea.dye
                          gaea.external.targa
                          gaea.generate
                          gaea.geometry
                          gaea.geometry.base
                          gaea.geometry.classes
                          gaea.geometry.syntax
                          gaea.homogeneous
                          gaea.install
                          gaea.literals
                          gaea.lookat
                          gaea.material
                          gaea.math
                          gaea.mesh
                          gaea.mesher
                          gaea.movement
                          gaea.parallelepiped
                          gaea.plane
                          gaea.program
                          gaea.program.color
                          gaea.program.mesh
                          gaea.program.model
                          gaea.shader
                          gaea.syntax
                          gaea.texture
                          gaea.types
                          gaea.uv)
                   (dependencies jazz))
            (gaea.foreign (product gaea.foreign.product)
                          (update gaea.foreign
                                  gaea.foreign.product)
                          (dependencies jazz)))
  (project ".project"))
