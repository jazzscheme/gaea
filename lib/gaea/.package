(package gaea
  
  (title "Gaea")
  (description "Gaea Game engine")
  (authors "Guillaume Cartier" "Alain Marcotte" "Edouard Hebert")
  (stage alpha)
  (root "src")
  (install gaea.install)
  (products #;(script (title "Script")
                    (update script
                            script.expand
                            script.syntax)
                    (dependencies jazz))
            (gaea (title "Gaea")
                  (test gaea.validate.run)
                  (update gaea.array
                          gaea.buffer
                          gaea.camera
                          gaea.dye
                          gaea.engine
                          gaea.engine.metal
                          gaea.engine.opengl
                          gaea.external.targa
                          gaea.generate
                          gaea.geometry
                          gaea.geometry.base
                          gaea.geometry.classes
                          gaea.geometry.syntax
                          gaea.homogeneous
                          gaea.install
                          gaea.literals
                          gaea.lookat
                          gaea.material
                          gaea.math
                          gaea.mesh
                          gaea.mesher
                          gaea.movement
                          gaea.parallelepiped
                          gaea.pipeline
                          gaea.plane
                          gaea.program
                          gaea.program.color
                          gaea.program.mesh
                          gaea.program.model
                          gaea.render
                          gaea.shader
                          gaea.syntax
                          gaea.texture
                          gaea.types
                          gaea.uv
                          gaea.window
                          gaea.window.frame)
                   (dependencies jazz))
            (gaea.foreign (product gaea.foreign.product)
                          (update gaea.foreign
                                  gaea.foreign.product)
                          (dependencies jazz))
            (gaea.metal   (product gaea.metal.product)
                          (update gaea.metal
                                  gaea.metal.product)
                          (dependencies jazz))
            (gaea.opengl (alias opengl)
                         (product gaea.opengl.product)
                         (update gaea.opengl
                                 gaea.opengl.glew
                                 gaea.opengl.install
                                 gaea.opengl.platform
                                 gaea.opengl.product
                                 gaea.opengl.render
                                 gaea.opengl.syntax
                                 gaea.opengl.texture
                                 gaea.opengl.trace)
                         (dependencies jazz
                                       jazz.foreign
                                       jazz.platform)))
  (project ".project"))
